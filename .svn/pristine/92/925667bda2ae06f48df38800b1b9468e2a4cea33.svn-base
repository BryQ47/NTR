body {
    padding-top: 50px;
    padding-bottom: 20px;
}

/* Set padding to keep content from hitting the edges */
.body-content {
    padding-left: 15px;
    padding-right: 15px;
}

/* Set width on the form input elements since they're 100% wide by default */
input,
select,
textarea {
    max-width: 280px;
}

#wrap > div {
    width: 338px;
    margin: 50px auto;
    
}

#calculator {
    padding: 2px 0px 5px 5px;
    font-size: 18pt;
    background-color: #c0f2ff;
    border-radius: 4px;
}

button {
    width: 60px;
    height: 60px;
    position: relative;
    margin: 4px 0px 4px 0px;
    display: inline-block;
    vertical-align: top;
}

.calceqbtn {
    width: 60px;
    height: 125px;
    position: absolute;
    margin-left: 7px;
}

.calcres {
    width: 258px;
    height: 60px;
    margin: 3px 1px 0px 1px;
    text-align: right;
    padding-right: 5px;
    background-color: #eef8ff;
    color: #1B2444;
    border-radius: 4px;
}

.eqp {
    position: relative;
    display: inline-block;
    vertical-align: top;
}

#wrap {
    min-height: 100%;
    height: auto;
    margin-bottom: -40px;
    padding-bottom: 40px;
}

footer {
    border-top: 1px solid #ccc;
    height: 40px;
}

footer > p {
    text-align: center;
    padding-top: 20px;
}

html, body {
    height: 100%;
}

form {
    display: inline;
}

.err-msg {
    text-align: center;
}