@{
    ViewBag.Title = "Home Page";
}

<div id="calculator">
    <div>
        <input id="restxt" class="calcres" value="@ViewBag.Result" type="text" disabled="disabled">
        @using (Html.BeginForm("Index", "Home", new { param = "C" }, FormMethod.Post))
        {<button type="submit" class="btn btn-primary">C</button>}
    </div>
    <div>
        @using (Html.BeginForm("Index", "Home", new { param = "D7" }, FormMethod.Post))
        {<button type="submit" class="btn btn-primary btndis">7</button>}
        @using (Html.BeginForm("Index", "Home", new { param = "D8" }, FormMethod.Post))
        {<button type="submit" class="btn btn-primary btndis">8</button>}
        @using (Html.BeginForm("Index", "Home", new { param = "D9" }, FormMethod.Post))
        {<button type="submit" class="btn btn-primary btndis">9</button>}
        @using (Html.BeginForm("Index", "Home", new { param = "O/" }, FormMethod.Post))
        {<button type="submit" class="btn btn-primary btndis">/</button>}
        @using (Html.BeginForm("Index", "Home", new { param = "R" }, FormMethod.Post))
        {<button type="submit" class="btn btn-primary btndis">sqrt</button>}
    </div>
    <div>
        @using (Html.BeginForm("Index", "Home", new { param = "D4" }, FormMethod.Post))
        {<button type="submit" class="btn btn-primary btndis">4</button>}
        @using (Html.BeginForm("Index", "Home", new { param = "D5" }, FormMethod.Post))
        {<button type="submit" class="btn btn-primary btndis">5</button>}
        @using (Html.BeginForm("Index", "Home", new { param = "D6" }, FormMethod.Post))
        {<button type="submit" class="btn btn-primary btndis">6</button>}
        @using (Html.BeginForm("Index", "Home", new { param = "O*" }, FormMethod.Post))
        {<button type="submit" class="btn btn-primary btndis">*</button>}
        @using (Html.BeginForm("Index", "Home", new { param = "P" }, FormMethod.Post))
        {<button type="submit" class="btn btn-primary btndis">%</button>}
    </div>
    <div>
        @using (Html.BeginForm("Index", "Home", new { param = "D1" }, FormMethod.Post))
        {<button type="submit" class="btn btn-primary btndis">1</button>}
        @using (Html.BeginForm("Index", "Home", new { param = "D2" }, FormMethod.Post))
        {<button type="submit" class="btn btn-primary btndis">2</button>}
        @using (Html.BeginForm("Index", "Home", new { param = "D3" }, FormMethod.Post))
        {<button type="submit" class="btn btn-primary btndis">3</button>}
        @using (Html.BeginForm("Index", "Home", new { param = "O-" }, FormMethod.Post))
        {<button type="submit" class="btn btn-primary btndis">-</button>}

        @using (Html.BeginForm("Index", "Home", new { param = "E" }, FormMethod.Post))
        {<button type="submit" class="calceqbtn btn btn-primary btndis">=</button>}

    </div>
    <div>
        @using (Html.BeginForm("Index", "Home", new { param = "D0" }, FormMethod.Post))
        {<button type="submit" class="btn btn-primary btndis">0</button>}
        @using (Html.BeginForm("Index", "Home", new { param = "S" }, FormMethod.Post))
        {<button type="submit" class="btn btn-primary btndis">@ViewBag.Separator</button>}
        @using (Html.BeginForm("Index", "Home", new { param = "N" }, FormMethod.Post))
        {<button type="submit" class="btn btn-primary btndis">+/-</button>}
        @using (Html.BeginForm("Index", "Home", new { param = "O+" }, FormMethod.Post))
        {<button type="submit" class="btn btn-primary btndis">+</button>}
    </div>
</div>


@{
    if (ViewBag.Error)
    {
        <div class="alert alert-danger err-msg" role="alert">
            @ViewBag.ErrorDesc
        </div>
        <script>
            $(".btndis").attr("disabled", "disabled");
        </script>
    }
}
